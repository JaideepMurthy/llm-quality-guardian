# PHASE 3 - LLM Quality Guardian Environment Configuration

# Application Settings
APP_ENV=production
APP_NAME=llm-quality-guardian
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# FastAPI Configuration
FAST_API_HOST=0.0.0.0
FAST_API_PORT=8000
FAST_API_RELOAD=false
FAST_API_WORKERS=4

# Datadog Monitoring
DATADOG_ENABLED=true
DATADOG_API_KEY=your_datadog_api_key_here
DATADOG_APP_KEY=your_datadog_app_key_here
DATADOG_ENVIRONMENT=production
DATADOG_SERVICE=llm-quality-guardian
DATADOG_TRACE_ENABLED=true

# Google Cloud Configuration
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_KEYFILE_PATH=/path/to/keyfile.json
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key

# Model Configuration
MODEL_ENSEMBLE_SIZE=4
CONFIDENCE_THRESHOLD=0.7
MAX_TEXT_LENGTH=10000
PROCESSING_TIMEOUT_SECONDS=30

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/llm_guardian
REDIS_URL=redis://localhost:6379/0
MONGO_URL=mongodb://localhost:27017/llm_guardian

# Hallucination Detection Parameters
HALLUCINATION_TYPES=factual_error,logical_contradiction,fabricated_citation,out_of_context,temporal_inconsistency
FACTUAL_ERROR_THRESHOLD=0.85
LOGICAL_CONTRADICTION_THRESHOLD=0.8
FABRICATED_CITATION_THRESHOLD=0.9
OUT_OF_CONTEXT_THRESHOLD=0.75
TEMPORAL_INCONSISTENCY_THRESHOLD=0.8

# Feature Extraction Settings
NLP_ENABLE_SPACY=true
NLP_ENABLE_NLTK=true
NLP_MODEL_LANGUAGE=en
NLP_ENTITY_RECOGNITION=true
NLP_DEPENDENCY_PARSING=true

# Model Ensemble Configuration
ENABLE_FACTUAL_CONSISTENCY=true
ENABLE_LOGICAL_COHERENCE=true
ENABLE_SEMANTIC_SIMILARITY=true
ENABLE_SYNTACTIC_ANOMALY=true

# Weights for Model Ensemble (must sum to 1.0)
WEIGHT_FACTUAL_CONSISTENCY=0.3
WEIGHT_LOGICAL_COHERENCE=0.25
WEIGHT_SEMANTIC_SIMILARITY=0.25
WEIGHT_SYNTACTIC_ANOMALY=0.2

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=500

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

# Batch Processing
BATCH_SIZE=32
BATCH_MAX_ITEMS=1000
BATCH_TIMEOUT_SECONDS=300

# Logging Configuration
LOG_FORMAT=json
LOG_OUTPUT_FILE=/var/log/llm_guardian/app.log
LOG_ROTATION_SIZE_MB=100
LOG_RETENTION_DAYS=30

# Security Configuration
CORSALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,OPTIONS
CORS_ALLOW_CREDENTIALS=true
API_KEY_HEADER=X-API-Key
API_KEY=your-secret-api-key-here

# Performance Tuning
THREAD_POOL_SIZE=10
ASYNC_TIMEOUT_SECONDS=30
MAX_CONCURRENT_REQUESTS=100

# Email Notifications
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM_ADDRESS=noreply@llmguardian.com

# Slack Integration
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#alerts

# Version Control & Deployment
GIT_COMMIT_SHA=unknown
GIT_BRANCH=main
DEPLOYMENT_TIMESTAMP=2024-01-01T00:00:00Z
